  </script>
</head>
<body>
<div >


<h1 style="text-align: center;">Table Product</h1>
<table id="customers" class="table">
  <thead class="table-success">
    <tr>
      <th>STT</th>
      <th>ID's name</th>
      <th>Product's name</th>
      <th>Product's price</th>
      <th>Product's count</th>
      <th>Product's image</th>
      <th>Product's information</th>
      <th>Product's parameter</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% for(var i=0; i < data.length; i++) { %>
    <tr>
      <td><%=i+1%></td>
      <td><%= data[i].id %></td>
      <td><%= data[i].nameP %></td>
      <td><%= data[i].priceP %></td>
      <td><%= data[i].countP %></td>
      <td><a href="<%=data[i].imageP%>">Image <%=i+1%></a></td>
      <td><%= data[i].infoP %></td>
      <td><%= data[i].parameterP %></td>
      <td> 
        <a href="edit-add-product?id=<%= data[i].id %>" >Edit</a>
        <a href="delete-product?id=<%= data[i].id %>" type="button" onclick="checker(event)">Delete</a>
      </td>
    </tr>
 <% } %>
</tbody>
</table>
<div style="text-align: center;">
  <button class="btn btn-success"><a href="edit-add-product?id=-1" type="button" style="text-decoration-line: none; color: white;">Add new product</a></button>
</div>
</div>
</body>
</html>


