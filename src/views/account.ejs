<body>
<div >


<h1 style="text-align: center;">Table Account</h1>
<table id="customers" class="table">
  <thead class="table-success">
    <tr>
      <th>STT</th>
      <th>Authority</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% for(var i=0; i < data.length; i++) { %>
    <tr>
      <td><%=i+1%></td>
      <td><% if (data[i].idAuth == 1) { %>
            Admin
        <% } else if (data[i].idAuth == 2) { %>
            Manager
        <% } else { %>
            Member
        <% } %>
      </td>
      <!-- <td><%= data[i].idAuth %></td> -->
      <td><%= data[i].nameAcc %></td>
      <td><%= data[i].emailAcc %></td>
      <td> 
        <a href="edit-add-acc?id=<%= data[i].id %>" >Edit</a>
        <a href="delete-acc?id=<%= data[i].id %>" type="button" onclick="checker(event)">Delete</a>
      </td>
    </tr>
 <% } %>
</tbody>
</table>
<div style="text-align: center;">
  <button class="btn btn-success"><a href="edit-add-acc?id=-1" type="button" style="text-decoration-line: none; color: white;">Add new account</a></button>
</div>
</div>
